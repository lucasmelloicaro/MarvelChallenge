<?xml version="1.0" encoding="UTF-8"?>
<component name="CharacterListItem" extends="Group">
  <interface>
    <field id="itemContent" type="node" onChange="OnContentSet" />
  </interface>
  
  <script type="text/brightscript" uri="CharacterListItem.brs" />
  
  <children>
    <!-- Character Thumbnail -->
    <Poster
      id="characterImage"
      loadDisplayMode="scaleToFit"
      width="100"
      height="100"
      translation="[10, 10]"
      loadWidth="100"
      loadHeight="100" />
    
    <!-- Character Name -->
    <Label
      id="characterName"
      width="1000"
      height="40"
      translation="[130, 15]"
      horizAlign="left"
      vertAlign="center"
      font="font:MediumBoldSystemFont"
      color="0xFFFFFF" />
    
    <!-- Character Description -->
    <Label
      id="characterDescription"
      width="1000"
      height="60"
      translation="[130, 55]"
      horizAlign="left"
      vertAlign="top"
      font="font:SmallSystemFont"
      color="0xCCCCCC"
      wrap="true" />
      
    <!-- Selection Background -->
    <Rectangle
      id="selectionRect"
      width="1180"
      height="110"
      translation="[0, 5]"
      color="0x333333"
      visible="false" />
  </children>
</component>